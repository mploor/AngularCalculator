<!DOCTYPE html>
<html ng-app="AngularCalculator">
<head>
    <title>Calculator</title>
    <link href="style.css" rel="stylesheet" />
</head>
<body ng-controller="Calculator as c">

    <h1>{{c.currentVal}}</h1>

    <button class="bigButt" ng-click="c.clear()">Clear</button>
    <br />
    <button ng-click="c.numKey('7')">7</button>
    <button ng-click="c.numKey('8')">8</button>
    <button ng-click="c.numKey('9')">9</button>
    <button ng-click="c.selectOp('add')">+</button>
    <br />
    <button ng-click="c.numKey('4')">4</button>
    <button ng-click="c.numKey('5')">5</button>
    <button ng-click="c.numKey('6')">6</button>
    <button ng-click="c.selectOp('sub')">-</button>
    <br />
    <button ng-click="c.numKey('3')">3</button>
    <button ng-click="c.numKey('2')">2</button>
    <button ng-click="c.numKey('1')">1</button>
    <button ng-click="c.selectOp('mult')">*</button>
    <br />
    <button ng-click="c.numKey('.')">.</button>
    <button ng-click="c.numKey('0')">0</button>
    <button ng-click="c.execute()">=</button>
    <button ng-click="c.selectOp('div')">/</button>
    <br />
    <script src="~/bower_components/angular/angular.min.js"></script>
    <script src="~/ngApp/app.js"></script>
</body>
</html>